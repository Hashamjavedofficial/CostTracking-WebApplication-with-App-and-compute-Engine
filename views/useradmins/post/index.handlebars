<h1>All posts</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Images</th>
            <th>Model</th>
            <th>Price</th>
            <th>Category</th>
            <td>Your Price</td>
            {{!-- <th>Date</th> --}}
        </tr>

    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td><img style="height: 60px" src="/uploads/{{file}}" class="img-thumbnail"></td>
            <td>{{model}}</td>
            <td>{{price}}</td>

            <td>{{category.name}}</td>
            {{!-- <td>{{prices}}</td> --}}

            {{!-- <td>{{generateTime date 'MMM Do YYYY'}}</td> --}}

            <td>
                <form action="/useradmins/post" method="post">
                    <input type="number" name="prices">
                    <input type="hidden" name="id" value="{{id}}">
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>

            </td>

            {{!-- <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td> --}}



            {{!-- <td>
                <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

            </td> --}}
        </tr>
        {{/each}}
    </tbody>


</table>