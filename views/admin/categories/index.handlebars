<div class="row">
    <div class="col-sm-4">
        {{#each errors}}
        <div class="alert alert-danger">
            {{message}}
        </div>
        {{/each}}
        <h1>Create Categories</h1>
        <form action="/admin/categories/create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" name="name" class="form-control" placeholder="Enter Name">


            </div>
            <div class="form-group">

                <label for="file">Images</label>
                <input type="file" accept='image/*' name="file" class="form-control">
            </div>
            <button class="btn btn-primary">Create Category</button>

        </form>
    </div>
</div>
<br>

<hr>
<div class="row">
    <div class="col-sm-8">
        <h1>Categories</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td><img style="height: 60px" src="/uploads/{{file}}" class="img-thumbnail"></td>
                    <td><a href="/admin/categories/edit/{{id}}" class="btn btn-info">Edit</a></td>
                    <td>
                        <form action="/admin/categories/{{id}}?_method=DELETE" method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>

                    </td>

                </tr>
                {{/each}}
            </tbody>

        </table>


    </div>
</div>